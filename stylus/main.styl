@import url('https://fonts.googleapis.com/css2?family=Spartan:wght@400;500;700&display=swap');

//variables
$veri-cl = hsl(333, 80%, 67%)
$big-head-cl = hsl(300, 43%, 22%)
$card-bg-cl = hsl(300, 43%, 22%)
$rate-txt-cl = hsl(300, 43%, 22%)
$star-bg-cl = hsl(300, 24%, 96%)
$cl-white = hsl(0, 0%, 100%)
$prd-txt-cl = hsl(303, 10%, 53%)

html,body
    height 100%

html,body,div,span,p,h1,h2,h3,img,ul,li,main,a
    margin 0
    padding 0
    list-style none
    text-decoration none

*
    font-size 100%
    box-sizing border-box
    font-family 'Spartan', sans-serif

    &::before,&::after
        box-sizing border-box
        
body
    background url('../assets/bg-pattern-top-mobile.svg'), url('../assets/bg-pattern-bottom-mobile.svg')
    background-repeat no-repeat, no-repeat
    background-position top left, bottom right
    padding 4rem 1rem

.prod
    &-statement
        text-align center
        &__head
            color $big-head-cl
            font-size 1.9rem
            font-weight 900
        &__txt 
            margin-top 1rem
            color $prd-txt-cl
            font-size .8rem
            line-height 1.2
            font-weight 500

    &-rate
        margin-top 1rem
        ul
            li
                background $star-bg-cl
                display flex
                flex-direction column
                text-align center
                padding .6rem
                margin-bottom 1rem
                border-radius .3rem

                .star
                    &__img img 
                        width .8rem
                        margin-left .4rem

                    &__txt
                        font-size .6rem
                        color $big-head-cl
                        font-weight 900
                        margin-top .3rem

.reviews
    margin-top 2rem

.card
    background $card-bg-cl
    padding 1.5rem
    border-radius .4rem
    margin-bottom 1rem
    &-top
        display flex
        &__img img
            width 2.2rem
            height @width
            border-radius 50%
        &__txt
            font-size .7rem
            align-self center
            margin-left 1rem
            h2
                color $cl-white
                margin-bottom .2rem
            h3
                color $veri-cl
                font-weight 500
    p
        margin-top 1rem
        font-size .7rem
        color $cl-white
        line-height 1.4

footer 
    display none

@media screen and (min-width 24.933em)
    .prod
        &-statement
            &__head
                font-size 2.3rem
            &__txt 
                margin-top 1rem
                font-size 1.02rem
                line-height 1.5

        &-rate
            margin-top 1rem
            ul
                li
                    padding 1.03rem
                    .star
                        &__img img 
                            width .97rem
                            margin-left .5rem

                        &__txt
                            font-size .8rem
    .card
        padding 2rem
        margin-bottom 1rem
        &-top
            &__img img
                width 2.3rem
                height @width
            &__txt
                font-size .8rem
                margin-left 1.3rem
        p
            margin-top 1rem
            font-size .91rem
            color $cl-white
            line-height 1.7     

@media screen and (min-width 39.6em)
    body
        background url('../assets/bg-pattern-top-desktop.svg'), url('../assets/bg-pattern-bottom-desktop.svg')
        background-repeat no-repeat, no-repeat
        background-position top left, bottom right
        display flex
        justify-content center
        align-items center
        height auto

    main
        max-width 37.7333em

@media screen and (min-width 66.666em)
    body
        padding 20rem 0 /*ultimate zoom padding -just a hack-*/
        height 100vh
        flex-direction column
    main
        max-width 73.333em    
    .prod
        display flex
        &-statement
            text-align left
            width 30em
            &__head
                font-size 2.7rem
            &__txt
                font-size .93rem

        &-rate
            margin-left auto
            ul
                li
                    flex-direction row
                    padding 1.3rem 3.6rem 1.3rem 2rem
                    &:nth-child(1)
                        transform translateX(-4.5rem)

                    &:nth-child(2)
                        transform translateX(-3rem)

                    .star
                        &__txt
                            margin 0 0 0 1.5rem
                            align-self center

    .reviews
        margin-top 4rem
        display flex
        gap 1.4rem

        .card
            &:nth-child(2)
                transform translateY(1.3rem)
            &:nth-child(3)
                transform translateY(2.5rem)

    footer 
        display block
        margin-top 3rem
        font-size .89rem
        font-weight 400

@media screen and (min-width 75.73333em)
    .prod
        &-statement
            &__head
                font-size 3.2rem
                line-height 1
            &__txt
                font-size .93rem
                line-height 1.7
        &-rate
            ul
                li
                    padding 1.3rem 3.6rem 1.3rem 2rem
                    &:nth-child(1)
                        transform translateX(-7rem)

                    &:nth-child(2)
                        transform translateX(-3.3rem)

                    .star
                        &__img img
                            width 1.2rem
                        &__txt
                            font-size .9rem
    .card
        padding 2rem
        margin-bottom 1rem
        &-top
            &__img img
                width 2.8rem
                height @width
            &__txt
                font-size .9rem
                margin-left 1.3rem
        p
            margin-top 1rem
            font-size .91rem
            color $cl-white
            line-height 1.7                         